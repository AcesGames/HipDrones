@using System.IO
@model IEnumerable<HipDronesProject.Data.Models.Picture>

@{
    ViewData["Title"] = "Gallery";
}

<h2>Gallery</h2>

<div>
<hr/>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        img {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            width: 150px;
        }

        img:hover {
            box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
        }
    </style>


    </div>

    <div>

        @foreach (var imgPath in Directory.GetFiles(("wwwroot/images/uploaded"), "*.jpg"))
        {
        
            var img = new FileInfo(imgPath);
            <img src="@Url.Content(String.Format("/images/uploaded/{0}", img.Name))" height="100" width="200" style="display: inline-block; margin-top:10px" onclick="window.open(this.src)"> 
                                                                                                                                                   
        }
      
    </div>

